#!/bin/bash

set -e

case "$1" in
    configure)
        echo "hcloud-ssh-ctl installed successfully!"
        echo ""
        echo "To get started, run:"
        echo "  hcloud-ssh-ctl"
        echo ""
        echo "You'll need to configure a project and API key first."
        ;;

    abort-upgrade|abort-remove|abort-deconfigure)
        ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
        ;;
esac

#DEBHELPER#

exit 0
